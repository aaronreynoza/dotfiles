
# Connecting
mysql \
    --password=password-here \
    -h hostname-here \
    -u username-here \
    -D database-name

# Running a sql script, output in terminal
mysql \
    -t \ # print the table outline
    --password=password-here \
    -h hostname-here \
    -u username-here \
    -D database-name < script.sql

# List tables
MySQL [database-name]> show tables;

# Help (question mark)
MySQL [database-name]> ?

# Server-side help
MySQL [database-name]> help contents

# Show table with column comments
MySQL [database-name]> SHOW FULL COLUMNS FROM $table_name;

# Show table create instruction (useful to see constraints)
MySQL [database-name]> SHOW CREATE TABLE $table_name;

# Show indexes for table
MySQL [database-name]> SHOW INDEXES IN $table_name;

